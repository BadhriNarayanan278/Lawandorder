<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkBlue">

    <Button
        android:text="Christian Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_marginStart="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="christianLaw" />

    <Button
        android:text="Company Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button4"
        android:onClick="companyLaw"
        app:layout_constraintTop_toTopOf="@+id/button3"
        android:layout_marginEnd="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp" />

    <Button
        android:text="Contract Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button5"
        android:onClick="contractLaw"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:text="Criminal Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button6"
        android:onClick="criminalLaw"
        app:layout_constraintLeft_toLeftOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:text="Family Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button7"
        android:onClick="familyLaw"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:text="Hindu Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button8"
        android:onClick="hinduLaw"
        app:layout_constraintLeft_toLeftOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button7" />

    <Button
        android:text="Labour Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button9"
        app:layout_constraintLeft_toLeftOf="@+id/button7"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:onClick="labourLaw" />

    <Button
        android:text="Law Enforcement"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button10"
        android:onClick="lawEnforcement"
        app:layout_constraintLeft_toLeftOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button9" />

    <Button
        android:text="Muslim Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button11"
        app:layout_constraintLeft_toLeftOf="@+id/button9"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        android:onClick="muslimLaw" />

    <Button
        android:text="Nationality Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button12"
        app:layout_constraintLeft_toLeftOf="@+id/button10"
        app:layout_constraintTop_toTopOf="@+id/button11"
        android:onClick="nationalityLaw" />

    <Button
        android:text="Tax Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button13"
        android:onClick="taxLaw"
        app:layout_constraintLeft_toLeftOf="@+id/button11"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button11" />

    <Button
        android:text="Tort Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button14"
        app:layout_constraintLeft_toLeftOf="@+id/button12"
        app:layout_constraintTop_toTopOf="@+id/button13"
        android:onClick="tortLaw" />

    <Button
        android:text="Trust Law"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button15"
        app:layout_constraintLeft_toLeftOf="@+id/button13"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/button13"
        android:onClick="trustLaw"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp" />
</android.support.constraint.ConstraintLayout>